<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeLayout">

        <attr name="mode" format="enum">
            <enum name="swipe" value="0"/> <!-- added swipe action button -->
            <enum name="button" value="1"/> <!-- added more/less button -->
            <enum name="fixed" value="2"/> <!-- no action is done -->
        </attr>

        <attr name="swActionButtonHeight" format="dimension"/>
        <attr name="swActionButtonSrc" format="reference"/>

        <attr name="swButtonTextMore" format="string"/>
        <attr name="swButtonTextLess" format="string"/>
        <attr name="swButtonStyle" format="reference"/>
    </declare-styleable>

</resources>